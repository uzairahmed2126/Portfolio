    <style>
        * {
   margin: 0;
   padding: 0;
 }

 body {
   background-color: #000000d8;
   font-family: 'Roboto Slab', serif;
 }

 .nav-bar {
   display: flex;
   justify-content: space-around;
   text-align: center;
   align-items: center;
   position: static;
   top: 0;
   width: 100%;
   filter: brightness(0.9);
   background-color: rgba(0, 0, 0, 0.2);
   outline: rgba(223, 216, 216, 0.9) 2px solid;

 }

 .nav-bar>a,
 .toggle {
   cursor: pointer;
   font-size: 1.5rem;
 }

 .toggle {
   color: #fff;
 }

 .nav-bar>a {
   color: #000000c2;
   margin: 10px;
   align-items: end;
 }

 .fa-brands {
   border-radius: 50%;
   background-color: lightblue;
   padding: 10px;
 }

 .fa-brands:hover {
   box-shadow: 0px 2px 8px 1px;
   filter: brightness(2);
 }

 a {
   text-decoration: none;
 }

 span {
   border: none;
 }

 .logo {
   margin-right: 130vh;
   color: #f5f5f5;
   rotate: 10deg;
 }

 .img:hover {
   scale: 1.1;
 }

 .logo-active {
   color: #000000;
 }



 .toggle:hover {
   transform: rotate(90deg);
   transition: all 0.5s;
   color: #ffff;
 }

 .nav-bar>a:hover {
   color: #000000;
 }

 .nav-bar>:first-child {
   transition: all 1s ease-in-out;
   animation: logo alternate 1s forwards;
   transform: rotate(-1deg);
 }

 .nav-bar>:first-child:hover {
   border-bottom: none;

 }

 @keyframes logo {
   0% {
     transition: all ease-in-out;
     scale: .90;
     transform: rotate(10deg);
   }

   50% {
     transition: all 1s ease-in-out;
     transform: rotate(20deg);
   }
 }

 .logo,
 .course,
 .web {
   font-size: 33px;
 }

 .grid {
   display: grid;
   word-spacing: 5px;
   text-align: justify;
   background-color: rgba(0, 0, 0, 0.2);
   outline: rgba(223, 216, 216, 0.9) 2px solid;
   z-index: -1;
   gap: 10px;
   margin: 2rem 10vh;
   animation: bounce 2s ease-in-out;
   transition: all 0.3s linear;
   border-radius: 10px;
   padding: 10px;
 }

 .grid>h1 {
   color: #f5f5f5;
   border-radius: 10px;
   font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
   box-shadow: 1px 2px 8px 4px #000000;
   background-color: rgba(0, 0, 0, 0.2);
 }

 .one,
 .two,
 .three,
 .four {
   padding: 90px;
 }

 .one {
   grid-column: 1/3;
   grid-row: 1/6;
 }

 .two {
   grid-column: 5/6;
   grid-row: 7/8;
 }

 .three {
   grid-column: 1/4;
   grid-row: 8/8;
 }

 .four {
   grid-row: 9/10;
   grid-column: 5/6;
 }

 .toggle {
   display: none;
 }

 .active {
   visibility: hidden;
 }

 .active-nav {
   position: sticky;
   color: #000000;
   background-color: lightblue;
 }

 .mobile {
   display: flex;
   flex-direction: column;
   align-items: end;
   padding: 15px;
   gap: 50px;
   transition: all 1s;
 }

 .mobile>a {
   color: #000000c2;
   font-size: 1.5rem;
 }

 .mobile>a:hover {
   scale: 1.1;
   color: #000000;
 }


 .form-container {
   display: grid;
   place-items: center;
   animation: bounce 2s ease-in-out;
   transition: all 0.3s linear;

 }

 .login-page {
  color: #fff;
  padding: 10px;
  margin-bottom: 30px;
 }

 @keyframes bounce {
   0% {
     transform: scale(1);
   }

   50% {
     transform: scale(1.1);
   }

   100% {
     transform: scale(1);
   }
 }


 .form {
   background-color: rgba(0, 0, 0, 0.2);
   display: flex;
   flex-direction: column;
   align-items: center;
   justify-content: center;
   text-align: center;
   padding: 5rem;
   margin-top: 5rem;
   outline: rgba(223, 216, 216, 0.5) 2px solid;
   border-radius: 10px;
   display: grid;
 }

 .form>input {
   padding: 15px 20px;
   border-radius: 10px;
   border: none;
   outline: none;
   margin: 10px;
   cursor: pointer;
 }

 .form>input:hover {
   filter: brightness(0.8);
 }

 .form>button {
   margin: 20px;
   padding: 10px 20px;
   background: darkred;
   border: none;
   outline: none;
   border-radius: 10px;
   color: #f5f5f5;
   cursor: pointer;
 }

 .form>button:hover {
   filter: brightness(1.6);
 }

 .footer {
   display: flex;
   justify-content: center;
   align-items: end;
 }

 footer {
   top: -50%;
   bottom: -50%;
   display: flex;
   align-items: flex-end;
   background: transparent;
   padding: 1rem;
   color: darkblue;
   font-style: italic;
   background-color: lightblue;
 }

 .footer-name {
   color: black;
 }

 /* responive section */
 @media only screen and (min-width: 769px) {
   .nav-bar {
     display: flex;
     justify-content: end;
     height: 4rem;
     align-items: center;
   }

   .nav-bar>:first-child {
     margin-right: -4vh;
   }

 }

 @media only screen and (max-width: 768px) {
   .nav-bar {
     display: flex;
     justify-content: end;
     height: 4rem;
     align-items: center;
   }

   .toggle {
     display: block;
     margin-right: 10px;
   }

   .nav-bar>a {
     visibility: hidden;
   }

   .img {
     width: 10%;
     visibility: visible;
   }

   .logo {
     margin-right: 30vh;
   }

   .logo,
   .course,
   .web {
     font-size: 22px;
   }

   .grid {
     display: flex;
     flex-direction: column;
     flex-wrap: wrap;
     word-spacing: 1px;
     text-align: justify;
     gap: 10px;
     margin: 10px;
   }

   .grid>h1 {
     color: #f5f5f5;
     border-radius: 10px;
     font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
     box-shadow: 1px 2px 8px 4px #000000;
     background-color: rgba(0, 0, 0, 0.2);
     outline: rgba(223, 216, 216, 0.9) 2px solid;
   }

   .form-container {
     display: flex;
     flex-wrap: wrap;
     place-items: center;
   }

   .form {
     background-color: rgba(0, 0, 0, 0.2);
     padding: 5rem;
     margin: 5rem auto;
     outline: rgba(223, 216, 216, 0.5) 2px solid;
     border-radius: 10px;
   }

   .form>input {
     padding: 15px 20px;
     border-radius: 10px;
     border: none;
     outline: none;
     margin: 10px;
     cursor: pointer;
   }

   .form>input:hover {
     filter: brightness(0.8);
   }

   .form>button {
     margin: 20px;
     padding: 10px 20px;
     background: darkred;
     border: none;
     outline: none;
     border-radius: 10px;
     color: #f5f5f5;
     cursor: pointer;
   }
 }
