    .container {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      text-align: center;
      /* height: 100vh; */
    }

    .inner-container {
      display: flex;
      flex-direction: row;
      flex-wrap: wrap;
      justify-content: center;
      text-align: center;
      align-items: center;
    }

    .btn {
      padding: 30px;
      margin: 20px;
      outline: none;
      border: none;
      background-image: linear-gradient(rgba(122, 85, 92, 0.801),
          rgba(193, 156, 201, 0.856),
          #120c247e,
          rgba(74, 8, 90, 0.664));
      border-radius: 10px;
      box-shadow: 0px 4px 8px 3px #000;
      font-size: 20px;
      display: grid;
      grid-template-columns: repeat(1, 60px);
      text-align: center;
      justify-content: center;
      align-items: center;
    }

    .btn:hover {
      transition: all 0.3s ease-in-out;
      /* filter: brightness(1.1); */
      /* color: #fff; */
      /* scale: 1.1; */
      transform: translate(-0%, -5%) scale(1.1);
    }

    .fa-play {
      margin: 10px;
      /* position: absolute; */
      top: 100%;
      border-radius: 10%;
      /* padding: 10px; */
      background-color: #00000033;
      padding: 0px;
      cursor: pointer;
    }

    .fa-pause {
      margin: 10px;
      /* position: absolute; */
      top: 100%;
      border-radius: 10%;
      /* padding: 10px; */
      background-color: #00000033;
      padding: 0px;
      cursor: pointer;
    }

    .fa-play:hover,
    .fa-pause:hover {
      scale: 1.4;
      cursor: pointer;
    }

